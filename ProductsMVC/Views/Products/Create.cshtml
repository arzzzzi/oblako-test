@model WebApplication1.Models.Product
 
 <div class="modal fade" id="addProduct">
     <div class="modal-dialog">
         <div class="modal-content">
             <div class="modal-header">
                 <h4 class="modal-title" id="addProductLabel">Добавить продукт</h4>
                 <button type="button" class="close" data-dismiss="modal">
                     <span>X</span>
                 </button>
             </div>
             <div class="modal-body">
                <form action="Create" id="addProductForm">
                    <div class="form-group">
                        <label asp-for="Name">Название</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Описание</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </form>
             </div>
             <div class="modal-footer">
                 <button type="button" class="btn btn-primary" data-dismiss="modal">Закрыть</button>
                 <button type="button" class="btn btn-primary" data-save="modal">Сохранить</button>
             </div>
         </div>
     </div>
 </div>

