@model IEnumerable<WebApplication1.Models.Product>

<h1>Products</h1>

<p>
    <a asp-action="Create">Добавить продукт</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Описание</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ID</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.ID">Изменить</a> |
                    <a asp-action="Delete" asp-route-id="@product.ID">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>


